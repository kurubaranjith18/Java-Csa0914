public class LongestSubstring {

    public static void main(String[] args) {

        String s = "abcabcbb";
        int maxLength = 0;

        for (int i = 0; i < s.length(); i++) {
            boolean visited[] = new boolean[256];
            int length = 0;

            for (int j = i; j < s.length(); j++) {
                char ch = s.charAt(j);

                if (visited[ch])
                    break;

                visited[ch] = true;
                length++;
            }

            if (length > maxLength)
                maxLength = length;
        }

        System.out.println("Longest length: " + maxLength);
    }
}
