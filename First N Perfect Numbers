public class PerfectNumbers {
    public static void main(String[] args) {

        int n = 2; // print first 2 perfect numbers
        int count = 0;
        int num = 1;

        while (count < n) {
            int sum = 0;

            for (int i = 1; i <= num / 2; i++)
                if (num % i == 0)
                    sum += i;

            if (sum == num && num != 0) {
                System.out.println(num);
                count++;
            }
            num++;
        }
    }
}
