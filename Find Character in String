public class FindCharacter {
    public static void main(String[] args) {

        String str = "HELLO";
        char ch = 'L';
        boolean found = false;

        for (int i = 0; i < str.length(); i++) {
            if (str.charAt(i) == ch) {
                System.out.println("Found at index: " + i);
                found = true;
            }
        }

        if (!found)
            System.out.println("Character not found");
    }
}
